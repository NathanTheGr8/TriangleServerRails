<div class="page-header">
  <%= link_to new_active_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Active
  <% end %>
  <%= link_to actives_path(:format => :csv), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-download"></span>
    Download
  <% end %>
  <%= link_to makeinitials_actives_path, method: :post, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-random"></span>
    Make Initials
  <% end %>
  <h1>Listing Actives</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First</th>
            <th>Middle</th>
            <th>Last</th>
            <th>Initials</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Year</th>
            <th>Major</th>
            <th>Pledgeclass</th>
            <th>Inhouse</th>
            
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @actives) do |active| %>
            <td><%= active.first %></td>
            <td><%= active.middle %></td>
            <td><%= active.last %></td>
            <td><%= active.initials %></td>
            <td><%= active.phone %></td>
            <td><%= active.email %></td>
            <td><%= active.year %></td>
            <td><%= active.major %></td>
            <td><%= active.pledgeclass %></td>
            <td><%= active.inhouse %></td>
            <td><%= link_to active do%>
              <span class="glyphicon glyphicon-info-sign blue"></span>
            <% end %>
            </td>
            <td><%= link_to edit_active_path(active) do%>
              <span class="glyphicon glyphicon-edit yellow"></span>
            <% end %>
            </td>
            <td><%= link_to active, method: :delete, data: { confirm: 'Are you sure?' } do%>
              <span class="glyphicon glyphicon-remove red"></span>
            <% end %>
            </td>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container-fluid text-center">
  <h2>Import Actives</h2>
  <%= form_tag import_actives_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import", class: "btn btn-primary"%>
  <% end %>
</div>
