
<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal text-center' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :name, class: "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-2">
          <%= f.text_field :first, class: "form-control", autofocus: true, :placeholder => "First" %>
      </div>
      <div class="col-sm-2">
          <%= f.text_field :middle, class: "form-control", :placeholder => "Middle" %>
      </div>
      <div class="col-sm-2">
          <%= f.text_field :last, class: "form-control", :placeholder => "Last" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :email, class: "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :password, class: "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-offset-1 col-sm-2 control-label" %>
      <div class="col-sm-6">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
  </div>

<% end %>

<div class="text-center">
<%= render "devise/shared/links" %>
</div>

